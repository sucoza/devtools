{
  "name": "error-boundary-visualizer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/error-boundary-visualizer/src",
  "projectType": "library",
  "tags": [
    "type:plugin",
    "scope:devtools"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "rollup -c",
        "cwd": "plugins/error-boundary-visualizer"
      },
      "dependsOn": [
        "devtools-common:build",
        "plugin-core:build",
        "shared-components:build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c -w",
        "cwd": "plugins/error-boundary-visualizer"
      },
      "dependsOn": [
        "devtools-common:build",
        "plugin-core:build",
        "shared-components:build"
      ]
    },
    "example": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ../../examples/plugins/error-boundary-visualizer && npm run dev",
        "cwd": "plugins/error-boundary-visualizer"
      },
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/plugins/error-boundary-visualizer"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "plugins/error-boundary-visualizer/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "plugins/error-boundary-visualizer"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write plugins/error-boundary-visualizer/src/**/*.{ts,tsx}"
      }
    }
  }
}
