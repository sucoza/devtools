{
  "name": "@sucoza/browser-automation-test-recorder-devtools-plugin",
  "version": "0.1.2",
  "description": "DevTools plugin for recording browser interactions and generating test cases with smart selector generation and playback capabilities",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "example": "cd example && npm run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:components": "vitest run src/__tests__/components",
    "test:performance": "vitest run src/__tests__/performance",
    "test:e2e": "playwright test --config src/__tests__/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config src/__tests__/e2e/playwright.config.ts --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:watch": "vitest",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:components && npm run test:performance",
    "test:ci": "npm run test:all && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "analyze:bundle": "rollup -c --bundleConfigAsCjs --environment BUILD:production,ANALYZE:true",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "devtools",
    "browser-automation",
    "test-recorder",
    "playwright",
    "selenium",
    "test-generation",
    "selector-engine",
    "ui-testing",
    "e2e-testing",
    "chrome-devtools-protocol",
    "tanstack",
    "react"
  ],
  "author": "tyevco",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@sucoza/devtools-common": "workspace:*",
    "@sucoza/plugin-core": "workspace:*",
    "@sucoza/shared-components": "workspace:*",
    "@tanstack/devtools": "^0.6.2",
    "@tanstack/devtools-event-client": "^0.2.3",
    "chrome-remote-interface": "^0.33.3",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "pixelmatch": "^7.1.0",
    "playwright-core": "^1.40.0",
    "pngjs": "^7.0.0",
    "use-sync-external-store": "^1.5.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/node": "^24.3.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.49.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}