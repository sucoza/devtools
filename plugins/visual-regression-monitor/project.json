{
  "name": "visual-regression-monitor",
  "sourceRoot": "plugins/visual-regression-monitor/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "rollup -c",
        "cwd": "plugins/visual-regression-monitor"
      },
      "dependsOn": [
        "devtools-common:build",
        "plugin-core:build",
        "shared-components:build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c -w",
        "cwd": "plugins/visual-regression-monitor"
      },
      "dependsOn": [
        "devtools-common:build",
        "plugin-core:build",
        "shared-components:build"
      ]
    },
    "example": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ../../examples/plugins/visual-regression-monitor && npm run dev",
        "cwd": "plugins/visual-regression-monitor"
      },
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/plugins/visual-regression-monitor"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "plugins/visual-regression-monitor/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "plugins/visual-regression-monitor/tsconfig.json",
        "noEmit": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write plugins/visual-regression-monitor/src/**/*.{ts,tsx}"
      }
    }
  },
  "tags": [
    "type:plugin",
    "scope:devtools"
  ]
}