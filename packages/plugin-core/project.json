{
  "name": "plugin-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-core/src",
  "projectType": "library",
  "tags": [
    "type:util",
    "scope:shared"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "rollup -c",
        "cwd": "packages/plugin-core"
      },
      "dependsOn": [
        "devtools-common:build"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c -w",
        "cwd": "packages/plugin-core"
      },
      "dependsOn": [
        "devtools-common:build"
      ]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/plugin-core"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/plugin-core/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/plugin-core/tsconfig.json",
        "noEmit": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write packages/plugin-core/src/**/*.{ts,tsx}"
      }
    }
  }
}
