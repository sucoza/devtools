{
  "name": "@sucoza/plugin-core",
  "version": "0.1.9",
  "description": "Core infrastructure for TanStack DevTools plugins",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": [
    "devtools",
    "tanstack",
    "plugin",
    "core",
    "infrastructure"
  ],
  "author": "tyevco",
  "license": "MIT",
  "peerDependencies": {
    "@tanstack/devtools": "^0.6.2",
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@testing-library/react": "catalog:",
    "use-sync-external-store": "catalog:",
    "zustand": "catalog:"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "catalog:",
    "@rollup/plugin-node-resolve": "catalog:",
    "@rollup/plugin-typescript": "catalog:",
    "@tanstack/devtools": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-peer-deps-external": "catalog:",
    "rollup-plugin-postcss": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
