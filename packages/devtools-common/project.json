{
  "name": "devtools-common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/devtools-common/src",
  "projectType": "library",
  "tags": [
    "type:util",
    "scope:shared"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "rollup -c",
        "cwd": "packages/devtools-common"
      },
      "dependsOn": []
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c -w",
        "cwd": "packages/devtools-common"
      },
      "dependsOn": []
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/devtools-common"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/devtools-common/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/devtools-common"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write packages/devtools-common/src/**/*.{ts,tsx}"
      }
    }
  }
}
